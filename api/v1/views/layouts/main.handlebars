      /* עיצוב כפתור ה-AI של Gemini */
      #ai-assistant-bubble {
        position: fixed;
        bottom: 30px;
        left: 30px; 
        width: 65px;
        height: 65px;
        background-color: #ffffff;
        border-radius: 50%;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid #e0e0e0;
        text-decoration: none;
      }

      #ai-assistant-bubble:hover {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 6px 25px rgba(0,0,0,0.2);
      }

      .ai-label {
        position: absolute;
        right: 75px;
        background: #1a73e8;
        color: white;
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: bold;
        white-space: nowrap;
        opacity: 0;
        transition: opacity 0.3s;
        pointer-events: none;
      }

      #ai-assistant-bubble:hover .ai-label {
        opacity: 1;
      }

      #ai-assistant-bubble img {
        width: 35px;
        height: 35px;
      }
    </style>
  </head>
